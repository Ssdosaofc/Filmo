<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.bottomnavigation.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <View
        android:id="@+id/myRectangleView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rectangle"/>


    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310sp"
        android:layout_marginTop="1dp"
        android:background="@color/two"
        android:text="@string/logout"
        android:textColor="@color/five"
        android:textSize="12sp" />
    
    <Button
        android:id="@+id/Fav"
        android:layout_gravity="right"
        android:layout_marginTop="640dp"
        android:layout_marginRight="30dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/favoritecolor"
        android:foreground="@android:drawable/btn_star"
        android:foregroundGravity="center"
        android:text="@string/y"/>

    <TextView
        android:id="@+id/userdetails"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="35sp"
        android:text="Hello World!"
        android:textColor="@color/five"
        android:textSize="9sp" />
    <TextView
        android:id="@+id/appname"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10sp"
        android:textStyle="bold"
        android:text="Filmopedia"
        android:textColor="@color/five"
        android:textSize="18sp" />
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchbar"
    android:layout_width="397dp"
    android:layout_height="47dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="52dp"
    android:layout_marginEnd="10dp"
        android:background="@drawable/search_item"/>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


    </FrameLayout>

</com.google.android.material.bottomnavigation.BottomNavigationView>